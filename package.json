{
  "name": "pastevault-backend",
  "version": "1.0.0",
  "description": "Secure end-to-end encrypted paste sharing backend",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:push": "node scripts/prisma-runner.mjs db push",
    "db:migrate": "node scripts/prisma-runner.mjs migrate dev",
    "db:generate": "node scripts/prisma-runner.mjs generate",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/rate-limit": "^8.0.3",
    "@prisma/client": "^5.6.0",
    "dotenv": "^17.2.1",
    "fastify": "^4.24.3",
    "nanoid": "^5.0.3",
    "node-cron": "^3.0.3",
    "sodium-native": "^4.0.10",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.8.9",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint-config-next": "^14.0.3",
    "eslint": "^8.53.0",
    "prisma": "^5.6.0",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18"
  }
}
