{
  "name": "pastevault",
  "version": "0.1.6",
  "description": "Secure end-to-end encrypted paste sharing",
  "main": "dist/index.js",
  "bin": {
    "pastevault": "dist/cli.js"
  },
  "files": [
    "dist/",
    "frontend/.next/",
    "frontend/public/",
    "frontend/next.config.js",
    "frontend/package.json",
    "prisma/",
    "scripts/"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build:cli": "npm run build && npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "start": "node dist/index.js",
    "db:push": "node scripts/prisma-runner.mjs db push",
    "db:migrate": "node scripts/prisma-runner.mjs migrate dev",
    "db:generate": "node scripts/prisma-runner.mjs generate",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build:cli",
    "postinstall": "prisma generate --schema=prisma/schema.prisma"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arc53/pastevault.git"
  },
  "homepage": "https://pastevault.dev/",
  "bugs": {
    "url": "https://github.com/arc53/pastevault/issues"
  },
  "keywords": [
    "paste",
    "pastebin",
    "secure",
    "encryption",
    "e2ee",
    "zero-knowledge",
    "cli",
    "self-hosted",
    "markdown",
    "nextjs",
    "fastify",
    "prisma",
    "postgresql",
    "sqlite"
  ],
  "license": "GPL-3.0",
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/rate-limit": "^8.0.3",
    "@monaco-editor/react": "^4.6.0",
    "@noble/ciphers": "^2.0.1",
    "@prisma/client": "^5.6.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@tailwindcss/typography": "^0.5.10",
    "@tanstack/react-query": "^5.8.4",
    "buffer": "^6.0.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "commander": "^11.0.0",
    "dotenv": "^17.2.1",
    "fastify": "^4.24.3",
    "highlight.js": "^11.11.1",
    "lucide-react": "^0.294.0",
    "nanoid": "^5.0.3",
    "next": "^15.5.3",
    "next-intl": "^4.3.5",
    "next-themes": "^0.2.1",
    "node-cron": "^4.2.1",
    "prisma": "^5.6.0",
    "react": "^18.2.0",
    "react-dom": "^19.1.1",
    "rehype-highlight": "^7.0.2",
    "rehype-sanitize": "^6.0.0",
    "rehype-stringify": "^10.0.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.0",
    "remark-rehype": "^11.0.0",
    "sodium-native": "^4.0.10",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "autoprefixer": "^10.4.16",
    "eslint-config-next": "^15.5.3",
    "eslint": "^8.53.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18"
  }
}
